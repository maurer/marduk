// TODO this should not be merged, but I'll fix that in a second pass
constraint(Loc, Constraints^concat)

malloc_constraint: constraint(loc, c) <- malloc_call{loc} + constraints::malloc_constraint
free_constraint: constraint(loc, c) <- free_call{loc, args} + constraints::free_constraint
gen_constraints: constraint(loc, c) <- lift {loc, bil} & func {base, contains: loc} + constraints::gen_constraints
